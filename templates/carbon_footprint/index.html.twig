{% extends 'base.html.twig' %}

{% block title %}Calculateur d'empreinte carbone{% endblock %}

{% block body %}
<div class="container mt-5">
    <h1 class="mb-4">Calculateur d'empreinte carbone</h1>
    
    {% for message in app.flashes('error') %}
        <div class="alert alert-danger">{{ message }}</div>
    {% endfor %}
    
    <div class="card">
        <div class="card-body">
            <form method="post" action="{{ path('carbon_footprint_calculate') }}">
                <div class="mb-3">
                    <label for="transport_mode" class="form-label">Mode de transport:</label>
                    <select class="form-select" id="transport_mode" name="transport_mode" required>
                        <option value="">SÃ©lectionnez un mode de transport</option>
                        {% for key, mode in transportModes %}
                            <option value="{{ key }}">{{ mode }}</option>
                        {% endfor %}
                    </select>
                </div>
                
                <div class="mb-3">
                    <label for="distance" class="form-label">Distance (km):</label>
                    <input type="number" step="0.1" min="0.1" class="form-control" id="distance" name="distance" required>
                </div>
                
                <button type="submit" class="btn btn-primary">Calculer</button>
            </form>
        </div>
    </div>
</div>
{% endblock %}
{% extends 'base.html.twig' %}

{% block title %}Edit Route | EcoRoute{% endblock %}

{% block body %}
<div class="container py-5">
    <div class="row justify-content-center">
        <div class="col-lg-8">
            <div class="card border-0 shadow-lg">
                <div class="card-header bg-primary text-white py-3">
                    <div class="d-flex justify-content-between align-items-center">
                        <h2 class="h5 mb-0"><i class="fas fa-route me-2"></i> Edit Route</h2>
                        <a href="{{ path('route_index') }}" class="btn btn-sm btn-light">
                            <i class="fas fa-arrow-left me-1"></i> Back
                        </a>
                    </div>
                </div>
                
                <div class="card-body p-4">
                    {{ form_start(form, {'attr': {'id': 'route-form', 'novalidate': 'novalidate', 'class': 'needs-validation'}}) }}
                    
                    <div class="row g-3">
                        <!-- Start Location -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.startLocation, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.startLocation.vars.valid ? '' : ' is-invalid'),
                                        'placeholder': ' ',
                                        'id': 'startLocation'
                                    }
                                }) }}
                                {{ form_label(form.startLocation, 'Starting Point', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.startLocation)|striptags }}
                                </div>
                            </div>
                        </div>
                        
                        <!-- End Location -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.endLocation, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.endLocation.vars.valid ? '' : ' is-invalid'),
                                        'placeholder': ' ',
                                        'id': 'endLocation'
                                    }
                                }) }}
                                {{ form_label(form.endLocation, 'Destination', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.endLocation)|striptags }}
                                </div>
                            </div>
                        </div>
                        
                        <!-- Waypoints -->
                        <div class="col-12">
                            <div class="form-floating">
                                {{ form_widget(form.waypoints, {
                                    'attr': {
                                        'class': 'form-control',
                                        'placeholder': ' ',
                                        'id': 'waypoints',
                                        'style': 'height: 100px'
                                    }
                                }) }}
                                {{ form_label(form.waypoints, 'Waypoints (optional)', {'label_attr': {'class': 'form-label'}}) }}
                            </div>
                            <small class="text-muted">Separate multiple waypoints with commas</small>
                        </div>
                        
                        <!-- Duration & Vehicle Type -->
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.estimationDuration, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.estimationDuration.vars.valid ? '' : ' is-invalid'),
                                        'placeholder': ' ',
                                        'id': 'estimationDuration'
                                    }
                                }) }}
                                {{ form_label(form.estimationDuration, 'Estimated Duration (min)', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.estimationDuration)|striptags }}
                                </div>
                            </div>
                        </div>
                        
                        <div class="col-md-6">
                            <div class="form-floating">
                                {{ form_widget(form.vehiculeType, {
                                    'attr': {
                                        'class': 'form-control' ~ (form.vehiculeType.vars.valid ? '' : ' is-invalid'),
                                        'placeholder': ' ',
                                        'id': 'vehiculeType'
                                    }
                                }) }}
                                {{ form_label(form.vehiculeType, 'Vehicle Type', {'label_attr': {'class': 'form-label'}}) }}
                                <div class="invalid-feedback">
                                    {{ form_errors(form.vehiculeType)|striptags }}
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="d-grid gap-2 d-md-flex justify-content-md-end mt-4">
                        <button type="submit" class="btn btn-primary px-4 py-2">
                            <i class="fas fa-save me-2"></i> Update Route
                        </button>
                    </div>
                    
                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
</div>
{% endblock %}